@model IEnumerable<InvoiceSystemProject.Models.InvoiceModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InvoiceLayout.cshtml";
}
<style>
    a{
        text-decoration:none;
    }
</style>
<div class="row">
    <div class="col-md-4">
        <a href="/Invoice/NewInvoice" style="text-decoration:none">New Invoice</a>

    </div>
    <div class="col-md-8">
        <h4>All Invoices</h4>
    </div>
</div>

<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Sr No</th>
                <th>Invoice Date</th>
                <th>Customer Name</th>
                <th>Total Amount</th>
                <th>Paid Amount</th>
                <th>Remaining Amount</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{ 
                int i = 1;
            }
            @foreach(var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.invoice_date.ToShortDateString()</td>
                    <td>@item.customer_name</td>
                    <td>@item.total_amount</td>
                    <td>@item.paid_amount</td>
                    <td>@item.remaining_amount</td>
                    <td>@item.status</td>
                    <td>
                        @if (item.status == "Paid")
                        {
                            <a href="/Invoice/ViewInvoice/@item.invoice_id">View Invoice</a>

                        }
                        else
                        {
                            <a href="/Invoice/PayNow/@item.invoice_id">Pay Now</a>
                            <a href="/Invoice/ViewInvoice/@item.invoice_id">View Invoice</a>

                        }
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>
